<% title "Members" %>

<table>
  <tr>
    <th>Name</th>
    <th>Country</th>
    <th>Title</th>
    <th>Avatar File Name</th>
    <th>Description</th>
  </tr>
  <% for member in @members %>
    <tr>
      <td><%=h member.name %></td>
      <td><%=h member.country %></td>
      <td><%=h member.title %></td>
      <td><%=h member.avatar_file_name %></td>
      <td><%=h member.description %></td>
      <td><%= link_to "Show", member %></td>
      <td><%= link_to "Edit", edit_member_path(member) %></td>
      <td><%= link_to "Destroy", member, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Member", new_member_path %></p>
